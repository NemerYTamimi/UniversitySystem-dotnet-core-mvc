@model UniversitySystem.Models.ViewModels.StudentCreditVM

<partial name="_PortalPartial" />

<hr />
<div class="row">
    <div>
        <form asp-action="AddCredit" asp-controller="Student" method="post">
            <h3>Edit Student info</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentRegNo"  class="control-label"></label>
                <input asp-for="StudentRegNo"  lass="form-control"  readonly="readonly" />
                <span asp-validation-for="StudentRegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credit" class="control-label"></label>
                <input asp-for="Credit" class="form-control" />
                <span asp-validation-for="Credit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
