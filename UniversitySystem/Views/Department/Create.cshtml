@model UniversitySystem.Models.Department

    <partial name="_PortalPartial" />

    <hr />
    <section>
        <div>
            <form asp-action="Create">
                <h3>New Department</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DeptCode" class="control-label"></label>
                    <input asp-for="DeptCode" class="form-control" />
                    <span asp-validation-for="DeptCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeptName" class="control-label"></label>
                    <input asp-for="DeptName" class="form-control" />
                    <span asp-validation-for="DeptName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>

                </div>
            </form>
        </div>
    </section>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
