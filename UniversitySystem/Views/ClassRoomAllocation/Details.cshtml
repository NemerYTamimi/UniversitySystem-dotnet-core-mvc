@model UniversitySystem.Models.ClassRoomAllocation

@{
    ViewData["Title"] = "Details";
    var startTimeHour = Math.Floor(Model.StartTime / 60).ToString();
    var startTimeMin = (Model.StartTime % 60).ToString();
    if(double.Parse(startTimeHour)<10)
    {
        startTimeHour = "0" + startTimeHour;
    }
    if (double.Parse(startTimeMin) < 10)
    {
        startTimeMin = "0" + startTimeMin;
    }
    var endTimeHour = Math.Floor(Model.EndTime / 60).ToString();
    var endTimeMin = (Model.EndTime % 60).ToString();
    if (double.Parse(endTimeHour) < 10)
    {
        endTimeHour = "0" + endTimeHour;
    }
    if (double.Parse(endTimeMin) < 10)
    {
        endTimeMin = "0" + endTimeMin;
    }
}
<partial name="_PortalPartial" />

<div>
    <h4>ClassRoomAllocation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DeptCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Day.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-10">
            @string.Concat(string.Concat(startTimeHour, ":"),startTimeMin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-10">
            @string.Concat(string.Concat(endTimeHour, ":"), endTimeMin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomStatus)
        </dd>
    </dl>
</div>
<div class="m-5">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
